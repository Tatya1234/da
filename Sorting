#include <iostream>
using namespace std;
void bubbleSort(int n, int arr[])
{
    int counter = 1;
    while (counter < n)
    {
        for (int i = 0; i < n - counter; i++)
        {
            if (arr[i] > arr[i + 1])
            {
                int temp = arr[i];
                arr[i] = arr[i + 1];
                arr[i + 1] = temp;
            }
        }
        counter++;
    }
}
void selectionSort(int n, int arr[])
{
    for (int i = 0; i < n - 1; i++)
    {
        for (int j = i + 1; j < n; j++)
        {
            if (arr[j] < arr[i])
            {
                int temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
    }
}
int main()
{
    int n, arr[5];
    cout << "Enter 5 elements in an array:-" << endl;
    for (int i = 0; i < 5; i++)
    {
        cin >> arr[i];
    }
    // bubbleSort(5,arr);
    selectionSort(5, arr);
    cout << "Printing an sorted array:-" << endl;
    for (int i = 0; i < 5; i++)
    {
        cout << arr[i] << " ";
    }

    return 0;
}
