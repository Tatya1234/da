#include <iostream>
using namespace std;
void mergeSort(int arr[], int l, int r)
{
    if (l < r)
    {
        int mid = (l + r) / 2;
        mergeSort(arr, l, mid);
        mergeSort(arr, mid + 1, r);

        merge(arr, l, mid, r);
    }
}
void merge(int arr[], int l, int mid, int r)
{
    int n1 = mid - l + 1;
    int n2 = r - mid;

    int a[n1];
    int a[n2];

    for (int i = 0; i < n1; i++)
    {
        a[i] = arr[l + i];
    }
    for (int i = 0; i < n2; i++)
    {
        a[i] = arr[mid + 1 + i];
    }

    int i = 0, j = 0, k = l;
    while (i < n1 && j < n2)
    {
        if (a[i] < b[j])
        {
            arr[k++] = arr[i++];
        }
        else
        {
            arr[k++] = arr[j++];
        }
    }

    while (i < n1)
    {
        arr[k] = a[i];
    }
    while (j < n2)
    {
        arr[k] = a[j];
    }
}
int main()
{
    int arr[5], n;
    cout << "Enter the " << n << " items in array:-" << endl;
    for (int i = 0; i < 5; i++)
    {
        cin >> arr[i];
    }
    mergeSort(arr, 1, 5);
    cout << "Printing an sorted array:-" << endl;
    for (int i = 0; i < 5; i++)
    {
        cout << arr[i] << " ";
    }
    return 0;
}
