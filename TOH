#include<iostream>
using namespace std;
int steps=0;
void TOH(int n,char x,char y,char z){
    if(n==0){
        return;
    }
    TOH(n-1,x,z,y);
    cout<<"Move the disk "<<n<<" from rod "<<x<<" to rod "<<y<<endl;    
    steps++;
    TOH(n-1,z,y,x);
}
int main(){
    int n;
    cout<<"Enter the no. of disks:- "<<endl;
    cin>>n;
    cout<<endl;
    TOH(n,'A','B','C');
    cout<<"Total no. of steps :-"<<steps<<endl;
    return 0;
}
